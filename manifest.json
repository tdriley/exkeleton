{
  "manifest_version": 2,

  "name": "ProxyPOC",
  "description": "ProxyPOC",
  "version": "0.0.1",

  "icons": {
    "16": "icons/16x16.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  },

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "ProxyPOC"
  },

  "background" : {
    "scripts" : ["lib/exkeleton-background.js", "background.js"]
  },

  "permissions": [
    "activeTab",
    "tabs",
    "*://*/*",
    "storage",
    "proxy",
    "webRequest",
    "*://*/*",
    "webRequestBlocking"
  ]
}
